<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/van_darkholme"
    app:startDestination="@id/deepDark">

    <fragment
        android:id="@+id/deepDark"
        android:name="com.example.workwithfragments.fragments.DeepDark"
        android:label="fragment_deep_dark"
        tools:layout="@layout/fragment_deep_dark" >
        <action
            android:id="@+id/action_deepDark_self"
            app:destination="@id/deepDark"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name = "count"
            android:defaultValue="0"
            app:argType = "integer"/>
    </fragment>
</navigation>